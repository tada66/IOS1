#!/bin/sh
# xhorakt00 Tadeas Horak
# 7. 3. 2024

export POSIXLY_CORRECT=yes
export LC_ALL=C

help(){
    echo "xtf [-h|--help] [FILTR] [PŘÍKAZ] UŽIVATEL LOG [LOG2 [...]"
}
while getopts ":-:a:b:c:h" opt 
do 
    case "$opt" in 
        h)
            HELP="1"
            ;;
        -)  
            case $OPTARG in
                help)
                    help
                    exit 0
                    ;;
                *)
                    echo "Invalid syntax" >&2
            esac
            ;;
        *)
            echo "Invalid* syntax" >&2
            exit 1
            ;;
    esac
done
if [ "$HELP" -eq "1" ] ; then
    help
fi